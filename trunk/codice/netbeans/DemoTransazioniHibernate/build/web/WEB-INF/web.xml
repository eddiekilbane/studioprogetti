<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
    
   
    
    <servlet>
    <servlet-name>ServletControllerAdmin</servlet-name>
    <servlet-class>ServletControllerAdmin</servlet-class>
    </servlet>
    
     <servlet>
    <servlet-name>ServletRicerca</servlet-name>
    <servlet-class>ServletRicerca</servlet-class>
    </servlet>

     <servlet>
    <servlet-name>ServletUpdate</servlet-name>
    <servlet-class>ServletUpdate</servlet-class>
    </servlet>
   
    <servlet-mapping>
        <servlet-name>ServletControllerAdmin</servlet-name>
        <url-pattern>/servlet/ServletControllerAdmin</url-pattern>
    </servlet-mapping>

     <servlet-mapping>
        <servlet-name>ServletUpdate</servlet-name>
        <url-pattern>/servlet/ServletUpdate</url-pattern>
    </servlet-mapping>

 <servlet-mapping>
        <servlet-name>ServletRicerca</servlet-name>
        <url-pattern>/servlet/ServletRicerca</url-pattern>
    </servlet-mapping>


    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>index.html</welcome-file>
        </welcome-file-list>
    </web-app>
