<?xml version="1.0" encoding="ISO-8859-1" ?>

<!DOCTYPE struts-config PUBLIC
          "-//Apache Software Foundation//DTD Struts Configuration 1.1//EN"
          "http://jakarta.apache.org/struts/dtds/struts-config_1_1.dtd">


<struts-config>

  <!-- ========== Action Form Definitions ============================== -->
  <form-beans>					
 </form-beans>

  <!-- ========== Global Forward Definitions ============================== -->
  	
  <global-forwards>
  </global-forwards>
    	
  <!-- ========== Action Mapping Definitions ============================== -->

  <action-mappings>	
  
	<action path = "/azione1"
			type="actionsAvanzate.DemoActionDispatch" 
			parameter="metodo" 
			>
			<forward name="successOne" path="/jsp/prima.jsp" />			
			<forward name="successTwo" path="/jsp/seconda.jsp" />
	</action>
	
	<action path = "/azione2"
			type="actionsAvanzate.DemoActionDispatchLookUp"		
			parameter="method"
			>
			<forward name="successThree" path="/jsp/terza.jsp" />	
			<forward name="successFour" path="/jsp/quarta.jsp" />		
	</action>
		
</action-mappings>

	<message-resources
    parameter="actionsAvanzate.esempioActAdv" null="false" />

  <!-- ========== Plug In ============================== -->
   	
  <plug-in className="org.apache.struts.tiles.TilesPlugin" >
    <set-property property="definitions-config" 
	                 value="/WEB-INF/tiles-defs.xml" />
    <set-property property="moduleAware" value="true" />
    <set-property property="definitions-parser-validate" value="true" />
  </plug-in>
         
 </struts-config>