<tiles-definitions>

	<!-- definisco il template per la terza JSP -->
    <definition name="risorsa.terza" path="/jsp/template.jsp">
        <put name="header"  value="/jsp/header.jsp" />
        <put name="body"   value="/jsp/body3.jsp" />      
        <put name="footer" value="/jsp/footer.jsp" />       
    </definition>
    
    <!-- uso l'ereditarietà per il template della quarta JSP -->
    <definition name="risorsa.quarta" extends="risorsa.terza">
        <put name="body"   value="/jsp/body4.jsp" />        
    </definition>    

    <!-- uso l'astrazione per il template della quinta JSP
    	sfrutto il template con una diversa struttura (senza footer) -->
    <definition name="risorsa.quinta" extends="risorsa.quarta">
        <put name="header"  value="*** nuovo titolo ***" />
        <put name="body"   value="/jsp/body5.jsp" />          
    </definition>  
    
