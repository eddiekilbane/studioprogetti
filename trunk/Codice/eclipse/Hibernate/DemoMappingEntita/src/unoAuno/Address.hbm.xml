<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>

<class name="unoAuno.Address"
	   table="indirizzo" >

	<id name="id"
		type="long"
		column="idIndirizzo">
		
		<generator class="native"/>
	</id>


	<property   name="city"
				type="string"
				column="citta"
				length="255"
				not-null="true"/>

	<property   name="street"
				type="string"
				column="Via"
				length="255"
				not-null="true"/>
				
	<property   name="zipcode"
				type="string"
				column="CAP"
				length="255"
				not-null="true"/>
				
	<many-to-one name="utente"
			class="unoAuno.User"
			column="FKUtente"
			cascade="all"
			unique="true"/>

</class>

</hibernate-mapping>