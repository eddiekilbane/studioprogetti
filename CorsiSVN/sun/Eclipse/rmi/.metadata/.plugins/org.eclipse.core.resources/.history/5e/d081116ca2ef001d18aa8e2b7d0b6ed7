package server.util;

import javax.naming.Context;
import javax.naming.InitialContext;

import server.dao.remote.impl.DaoCdImplJdbc;
import serverHello.HelloImpl;

public class ServerListener {

	/**
	 * @param args
	 */
	public static void main(String[] args) {
		// TODO Auto-generated method stub

		try { 
			 System.out.println("Construzione implementazione servizio sul server ...");
				
			 DaoCdImplJdbc servizioDaoCD = new DaoCdImplJdbc();
	          
	          System.out.println("Collegamento del servizio DaoCD al registro...");
	          
	          Context namingContext = new InitialContext();
	          
	          System.out.println("prima del bind");
	          namingContext.bind("rmi:daoCd", servizioDaoCD);
	          
	          System.out.println("In attesa di chiamate dai clients...");

	          
	         
	      }
		
	       catch (Exception e)
	       {
	         e.printStackTrace();
	       }
		
		
		
		
		
		
	}

}
