<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping SYSTEM
			"http://hibernate.sourceforge.net/hibernate-mapping-2.0.dtd" >
<!--

commenti
-->


<hibernate-mapping package="semplici">

<class name="User" table="utente">

	<id name="id"
		type="long"
		column="idUser" >
		<generator class="native"/>
	</id>

	<!-- User come entita -->
	<property   name="firstname"
				type="string"
				column="Nome"
				length="255"
				not-null="true"/>

	<property   name="lastname"
				type="string"
				column="Cognome"
				length="255"
				not-null="true"/>

	<!-- La UserName e' UNICA unique=true e NON MODIFICABILE update="false" -->
	<property   name="username"
				type="string"
				column="UserId"
				length="16"
				not-null="true"
				unique="true"
				update="false">
	</property>


	<property   name="password"
				type="string"
				column="PasswordUtente"
				length="12"
				not-null="true"/>

	<property   name="email"
				type="string"
				column="Email"
				length="255"
				not-null="true"/>

	<property   name="ranking"
				type="int"
				column="Punteggio"
				not-null="true"/>
		
</class>

</hibernate-mapping>