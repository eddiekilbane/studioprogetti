<?xml version="1.0" encoding="ISO-8859-1" ?>

<!DOCTYPE struts-config PUBLIC
"-//Apache Software Foundation//DTD Struts Configuration 1.1//EN"
"http://jakarta.apache.org/struts/dtds/struts-config_1_1.dtd">

<struts-config>


  <form-beans>
    <form-bean  name="euroConvertitore" 
                type="form.FormEuroConvertitore"/>
                
  </form-beans>
  
  <global-forwards>
    <forward name="mainpage"  path="index.jsp"  />
  </global-forwards>
  
  
  <action-mappings>
    <action   path="/lireInEuro"
              type="actions.ActionLireInEuro"
              
              name="euroConvertitore"
              scope="request"
              validate="true"
              input="Input.jsp">
              
      <forward name="successo"  path="/OutputOk.jsp"  />
      <forward name="eccezioni"  path="/OutputEccezioni.jsp"  />
      
    </action>  
  </action-mappings>
 
  


</struts-config>
